#!/bin/bash

#SBATCH -n 15
#SBATCH -c 1

#SBATCH -A htc
#SBATCH -p HTC030
#SBATCH -J GyncMCMC

##SBATCH --error=job.%J.err 
#SBATCH --output=out/job.%j.out

# compile modules

path=out/fac5err10
iters=10_000
thin=100

echo saving to $path

export OPENBLAS_NUM_THREADS=1

echo compiling modules
srun -n1 -N1 ~/bin/htc030/julia -e \
  "using Gync;"

for s in {1..5}; do
  for c in {1..3}; do
    (
    filename=$path/$s\_$c.jld
    for i in {1..1000}; do
      echo starting run $i for $filename
      if [ ! -e "$filename" ]; then
        srun -n1 -N1 --exclusive \
          ~/bin/htc030/julia -e  \
          "using Gync; Gync.startmcmc($s,$iters,1,\"$filename\",thin=$thin)" &
      else
        srun -n1 -N1 --exclusive \
          ~/bin/htc030/julia -e  \
          "using Gync; Gync.continuemcmc(\"$filename\", $iters,thin=$thin)" &
      fi
      wait
    done
    echo completed $filename
    )&
  done
done

wait
